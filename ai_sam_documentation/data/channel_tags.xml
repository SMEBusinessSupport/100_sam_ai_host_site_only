<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Tag Group for SAM AI audience segmentation -->
        <record id="channel_tag_group_audience" model="slide.channel.tag.group">
            <field name="name">Audience</field>
            <field name="sequence">10</field>
        </record>

        <!-- Channel Tags for filtering -->
        <record id="channel_tag_internal" model="slide.channel.tag">
            <field name="name">Internal</field>
            <field name="group_id" ref="channel_tag_group_audience"/>
            <field name="color">1</field>
        </record>
        <record id="channel_tag_free" model="slide.channel.tag">
            <field name="name">Free</field>
            <field name="group_id" ref="channel_tag_group_audience"/>
            <field name="color">10</field>
        </record>
        <record id="channel_tag_premium" model="slide.channel.tag">
            <field name="name">Premium</field>
            <field name="group_id" ref="channel_tag_group_audience"/>
            <field name="color">4</field>
        </record>
    </data>
</odoo>
