<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Scan Form View -->
    <record id="view_insights_scan_form" model="ir.ui.view">
        <field name="name">insights.scan.form</field>
        <field name="model">insights.scan</field>
        <field name="arch" type="xml">
            <form string="Ecosystem Scan">
                <header>
                    <button name="action_run_scan" type="object" string="Run Scan"
                            class="btn-primary"
                            invisible="state not in ('draft', 'failed')"/>
                    <button name="action_view_report" type="object" string="View Report"
                            class="btn-secondary"
                            invisible="state != 'completed'"/>
                    <button name="action_export_json" type="object" string="Export JSON"
                            class="btn-secondary"
                            invisible="state != 'completed'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,running,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object"
                                name="action_view_report"
                                icon="fa-file-text-o"
                                invisible="state != 'completed'">
                            <div class="o_stat_info">
                                <span class="o_stat_text">View Report</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>

                    <group invisible="state != 'completed'">
                        <group>
                            <div class="text-center" style="font-size: 48px; font-weight: bold;">
                                <field name="health_score" readonly="1"/>
                                <span style="font-size: 24px; color: #888;">/ 100</span>
                            </div>
                            <field name="health_status" readonly="1"/>
                        </group>
                        <group>
                            <field name="duration_seconds" readonly="1" widget="float_time"/>
                            <field name="scan_date" readonly="1"/>
                        </group>
                    </group>

                    <group string="Configuration">
                        <group>
                            <field name="use_default_settings" readonly="state != 'draft'"/>
                            <field name="base_path" readonly="state != 'draft'"
                                   placeholder="Leave empty to use default settings"
                                   invisible="use_default_settings"/>
                            <field name="module_filter" readonly="state != 'draft'"
                                   placeholder="Leave empty to use default settings"
                                   invisible="use_default_settings"/>
                        </group>
                        <group>
                            <field name="include_registry" readonly="state != 'draft'"
                                   invisible="use_default_settings"/>
                        </group>
                    </group>

                    <div class="alert alert-info" role="alert" invisible="not use_default_settings or state != 'draft'">
                        <i class="fa fa-info-circle"/> This scan will use the configuration from
                        <strong>Scan Default Settings</strong>. Uncheck "Use Default Settings" to override.
                    </div>

                    <group string="Statistics" invisible="state != 'completed'">
                        <group>
                            <field name="files_scanned" readonly="1"/>
                            <field name="models_found" readonly="1"/>
                            <field name="views_found" readonly="1"/>
                        </group>
                        <group>
                            <field name="actions_found" readonly="1"/>
                            <field name="js_files_found" readonly="1"/>
                            <field name="css_files_found" readonly="1"/>
                        </group>
                    </group>

                    <group string="Issues" invisible="state != 'completed'">
                        <group>
                            <field name="critical_count" readonly="1"
                                   style="color: #dc3545; font-weight: bold;"/>
                            <field name="warning_count" readonly="1"
                                   style="color: #ffc107; font-weight: bold;"/>
                            <field name="info_count" readonly="1"/>
                        </group>
                    </group>

                    <field name="error_message" readonly="1" invisible="not error_message"
                           class="text-danger"/>

                    <notebook invisible="state != 'completed'">
                        <page string="Findings" name="findings">
                            <field name="finding_ids" nolabel="1"/>
                        </page>
                        <page string="Relationships" name="relationships">
                            <field name="relationship_ids" nolabel="1"/>
                        </page>
                        <page string="Raw Data" name="raw_data">
                            <field name="report_json" widget="ace" options="{'mode': 'json'}"
                                   readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Scan List View -->
    <record id="view_insights_scan_list" model="ir.ui.view">
        <field name="name">insights.scan.list</field>
        <field name="model">insights.scan</field>
        <field name="arch" type="xml">
            <list string="Ecosystem Scans" default_order="scan_date desc">
                <field name="scan_date"/>
                <field name="state" widget="badge"/>
                <field name="health_score"/>
                <field name="health_status"/>
                <field name="files_scanned"/>
                <field name="models_found"/>
                <field name="critical_count"/>
                <field name="warning_count"/>
                <field name="duration_seconds"/>
            </list>
        </field>
    </record>

    <!-- Scan Action -->
    <record id="action_insights_scan" model="ir.actions.act_window">
        <field name="name">Ecosystem Scans</field>
        <field name="res_model">insights.scan</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Run your first ecosystem scan!
            </p>
            <p>
                SAM AI Insights analyzes your codebase to find:
                <ul>
                    <li>Duplicate code and similar patterns</li>
                    <li>Orphaned components and dangling references</li>
                    <li>Relationship mapping between models, views, and menus</li>
                </ul>
            </p>
        </field>
    </record>

    <!-- Quick Scan Action -->
    <record id="action_quick_scan" model="ir.actions.server">
        <field name="name">Run Quick Scan</field>
        <field name="model_id" ref="model_insights_scan"/>
        <field name="binding_model_id" ref="model_insights_scan"/>
        <field name="state">code</field>
        <field name="code">
action = model.action_run_quick_scan()
        </field>
    </record>

</odoo>
