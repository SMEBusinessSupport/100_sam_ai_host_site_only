<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

      <record id="saas_template_database_view_form" model="ir.ui.view">
          <field name="name">saas.template.database.view.form</field>
          <field name="model">saas.template.database</field>
          <field name="arch" type="xml">
             <form>
                  <group>
                      <field name="image"/>
                      <field name="name"/>
                      <field name="database_name"/>
                      <field name="saas_server_id"/>
                      <field name="description"/>
                      <field name="monthly_price"/>
                      <field name="invoice_id"/>
                      <field name="redirect_url"/>
                      <field name="auto_backup"/>
                      <field name="auto_backup_days_to_keep"/>
                      <field name="max_size"/>
                      <field name="saas_database_model_id"/>
                      <field name="saas_database_create_date_field_id"/>
                      <field name="automated_actions_ids" domain="[('model_id','=', saas_database_model_id)]" context="{'default_model_id': saas_database_model_id, 'default_state': 'email', 'default_trigger': 'on_time', 'default_filter_domain': [('template_database_id','=',active_id)], 'default_trg_date_id': saas_database_create_date_field_id}">
                          <tree>
                              <field name="template_id"/>
                              <field name="trg_date_range"/>
                              <field name="trg_date_range_type"/>
                          </tree>
                      </field>
                  </group>
              </form>
          </field>
      </record>

      <record id="saas_template_database_view_tree" model="ir.ui.view">
          <field name="name">saas.template.database.view.tree</field>
          <field name="model">saas.template.database</field>
          <field name="arch" type="xml">
              <tree>
                  <field name="sequence" widget="handle"/>
                  <field name="name"/>
                  <field name="database_name"/>
                  <field name="description"/>
                  <field name="monthly_price"/>
              </tree>
          </field>
      </record>

      <record id="saas_template_database_action" model="ir.actions.act_window">
          <field name="name">SaaS Template Datbases</field>
          <field name="res_model">saas.template.database</field>
          <field name="binding_view_types">form</field>
          <field name="view_mode">tree,form</field>
          <field name="target">current</field>
      </record>
        
      <menuitem id="saas_template_database_menu" name="Template Databases" parent="saas_database_parent_menu" action="saas_template_database_action" sequence="20"/>
        
  </data>
</odoo>